<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--在静态资源映射的时候需要用到，不然controller没用-->
    <mvc:annotation-driven/>

    <!--指定需要扫描的包-->
    <context:component-scan base-package="fun.nevertheless.controller"/>
    <context:component-scan base-package="fun.nevertheless.service.impl"/>
    <context:component-scan base-package="fun.nevertheless.dao"/>


<!--    定义视图解析器-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver"><!--配置前缀和后缀，也可以不指定-->
        <!--配置前缀和后缀-->
        <property name="prefix" value="/"/>
        <property name="suffix" value=".jsp"/>
    </bean>


    <!-- 静态资源映射 -->
    <mvc:resources mapping="/css/**" location="/resource/css/"/>
    <mvc:resources mapping="/js/**" location="/resource/js/"/>
    <mvc:resources mapping="/mp3/**" location="/resource/mp3/"/>
    <mvc:resources mapping="/ttf/**" location="/resource/ttf/"/>
    <mvc:resources mapping="/img/**" location="/resource/img/"/>


    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean class="fun.nevertheless.interceptor.HomeResourceInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>


</beans>